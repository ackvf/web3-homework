{
  "name": "homework",
  "version": "0.2.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "postinstall":"npm run contracts:compile",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "format:fix": "pnpm format --write",
    "fix": "pnpm format:fix && pnpm lint:fix",
    "types": "tsc --noEmit --incremental",
    "types:watch": "tsc --noEmit --incremental --watch",
		"contracts:test": "hardhat test --no-compile",
		"contracts:compile": "hardhat compile",
		"contracts:typings": "hardhat typechain",
		"contracts:clean": "hardhat clean"
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "^2.2.3",
    "@tanstack/react-query": "^5.66.0",
    "next": "14.2.7",
    "react": "^18",
    "react-dom": "^18",
    "viem": "2.x",
    "wagmi": "^2.14.10"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/providers": "^5.6.8",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.7.21",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typechain": "^8.1.0",
		"@types/node": "^22.13.1",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"@typescript-eslint/eslint-plugin": "^8.3.0",
		"eslint": "^9.20.0",
		"eslint-config-next": "15.1.6",
		"eslint-config-prettier": "^10.0.1",
		"husky": "^9.1.5",
		"postcss": "^8",
		"prettier": "^3.4.2",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwind-merge": "^2.5.2",
		"tailwindcss": "^3.4.1",
		"typescript": "^5"
  }
}
